<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Student-Dashboard</title>
    <link rel="icon" href="../public/img/favicon.jpg" type="image/png" />
    <link rel="stylesheet" type="text/css" href="/css/style6.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <script src="/scripts/script.js"></script>
  </head>

  <body>
    <div class="navbarr">
      <img class="charusat-logo" src="/images/image-2.png" />
    </div>
    <div class="container">
      <nav>
        <ul>
          <li>
            <a href="#" class="logo">
              <img src="/icons/user-icon.png" alt="" />
              <span class="nav-item"
                ><%=user.firstName%> <%=user.middleName%>
                <%=user.lastName%></span
              >
            </a>
          </li>
          <li>
            <a href="">
              <i class="fas fa-user"></i>
              <span class="nav-item">Profile</span>
            </a>
          </li>
          <li>
            <a href="/change-password">
              <i class="fas fa-cog"></i>
              <span class="nav-item">Settings</span>
            </a>
          </li>

          <li>
            <a href="/" class="logout">
              <i class="fas fa-sign-out-alt"></i>
              <span class="nav-item" onclick="alertMessage()">Log out</span>
            </a>
          </li>
        </ul>
      </nav>

      <section class="main">
        <div class="main-top">
          <h1>Home</h1>

          <i class="fas fa-user-cog"></i>
        </div>

        <div class="main-skills">
          <div class="card">
            <i class="fab fa-wpforms"></i>
            <h3>Approval Form</h3>
            <button
              type="button"
              class="button-solid"
              onclick="approval_form()"
            >
              Click Here
            </button>
          </div>
          <div class="card">
            <i class="fas fa-laptop-code"></i>
            <h3>Confirmation Form</h3>
            <button type="button" class="button-solid" onclick="confirmationForm()">
              Click Here
            </button>
          </div>
          <div class="card">
            <i class="fas fa-laptop-code"></i>
            <h3>Completion Certificate</h3>
            <button
              type="button"
              class="button-solid"
              onclick="certification()"
            >
              Click Here
            </button>
          </div>
        </div>
      </section>
    </div>
  </body>
</html>
