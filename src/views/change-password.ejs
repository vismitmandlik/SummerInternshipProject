<!-- views/change-password.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="../public/css/style3.css">
  <title>Change Password</title>
</head>

<body>
  <div class="navbarr">
    <img class="charusat-logo" src="/public/img/image-2.png" />
        <div class="Home-nav">
            <a href="/student-dashboard">
                <img src="../public/img/home.png" alt="Home">
            </a>
        </div>
  </div>
  <div class="container">
    <h2>Change Password</h2>
    <form action="/change-password" method="post">
      <div class="form-group">
        <label for="password">Current Password:</label>
        <input type="password" class="p1" id="password" name="password" required>
      </div> 
       
      <div class="form-group">
        <label for="newPassword">New Password:</label>
        <input type="password" class="p2" id="newPassword" name="newPassword" required>
      </div>

      <div class="form-group">
        <label for="confirmNewPassword">Confirm New Password:</label>
        <input type="password" class="p3" id="confirmNewPassword" name="confirmNewPassword" required>
      </div>

      <!-- Add StudentID input field here -->
      <div class="form-group">
        <label for="username">Student ID:</label>
        <input type="text" class="t1" id="username" name="username" required>
      </div>

      <!-- <button type="submit">Change Password</button> -->
      <div class="form-group">
        <button type="submit" class="btn">Change Password</button>
      </div>
    </form>
  </div>
</body>
</html>
